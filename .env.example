# Database
DATABASE_URL=postgresql://airi_user:airi_password@postgres:5432/airi_db
POSTGRES_USER=airi_user
POSTGRES_PASSWORD=airi_password
POSTGRES_DB=airi_db

# Redis (for caching)
REDIS_URL=redis://redis:6379/0

# Elasticsearch
ELASTICSEARCH_URL=http://elasticsearch:9200

# Vector DB (Pinecone or local Milvus)
VECTOR_DB_TYPE=pinecone  # or 'milvus'
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=airi-embeddings

# LLM & Embeddings
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Data Ingestion
NEWSAPI_KEY=your_newsapi_key
NEWSAPI_RATE_LIMIT=100  # requests per day

# Email Alerts
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@airi.local

# Security
SECRET_KEY=your_secret_key_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Frontend
REACT_APP_API_URL=http://localhost:8000/api

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_RAG_SUMMARIZATION=true
ENABLE_RISK_SCORING=true
ENABLE_EMAIL_ALERTS=true

# Development
DEBUG=false
ENVIRONMENT=development

